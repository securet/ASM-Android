<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp" >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/poRequestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/update_po_request"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout android:layout_height="30dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="Status:"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Open"
            android:textColor="#A5A5A5"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/statusImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="2dp"
            android:src="@drawable/resolved_icon" />

        <View android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/initiatedDate"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="DATE"
            android:textColor="#A5A5A5"
            android:textSize="15sp" />


    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        <LinearLayout android:layout_width="fill_parent"  android:layout_height="fill_parent"  android:orientation="vertical" >

            <TextView
                android:id="@+id/partOrderRequestId"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_border_shape"
                android:text=""/>

            <TextView
                android:id="@+id/partName"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_border_shape"
                android:text=""/>

            <TextView
                android:id="@+id/partDescription"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_border_shape"
                android:text=""/>

            <TextView
                android:id="@+id/cost"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_border_shape"
                android:text=""/>

            <TextView
                android:id="@+id/initiatedBy"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_border_shape"
                android:text=""/>

            <TextView
                android:id="@+id/respondedBy"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_border_shape"
                android:text=""/>


            <TextView
                android:id="@+id/updatedOn"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingLeft="10dp"
                android:editable="false"
                android:enabled="false"
                android:singleLine="true"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:background="@drawable/square_border_shape"
                android:text=""/>


        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/poOptions"
        android:visibility="gone">
        <Button
            android:id="@+id/authorizeBTN"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="#348EEA"
            android:text="@string/authorize"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <Button
            android:id="@+id/rejectBTN"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:background="#348EEA"
            android:text="@string/reject"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp" >
        <TextView
            android:id="@+id/employeeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Logged in as Chikalkar"
            android:textColor="#999999"
            android:textSize="14dp" />
    </LinearLayout>
</LinearLayout>